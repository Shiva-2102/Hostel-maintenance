        <th>Issue</th>
        <th>Priority</th>
      </tr>
    </thead>
    <tbody id="complaintTable"></tbody>
  </table>

</div>

<script>
  const form = document.getElementById("complaintForm");
  const table = document.getElementById("complaintTable");

  function getPriority(issue) {
    if (issue === "Electrical") return "Critical";
    if (issue === "Water") return "High";
    if (issue === "Sanitation") return "Medium";
    return "Low";
  }

  form.addEventListener("submit", function(event) {
    event.preventDefault();

    const name = document.getElementById("name").value;
    const room = document.getElementById("room").value;
    const issue = document.getElementById("issue").value;

    const priority = getPriority(issue);

    const row = document.createElement("tr");
    row.className = priority;

    row.innerHTML = `
      <td>${name}</td>
      <td>${room}</td>
      <td>${issue}</td>
      <td>${priority}</td>
    `;

    table.appendChild(row);
    form.reset();
  });
</script>

</body>
</html>



BACKEND

  const express = require("express");
const cors = require("cors");

const app = express();
app.use(cors());
app.use(express.json());

let complaints = [];

// Priority logic
function getPriority(issue, description) {
  description = description.toLowerCase();

  if (
    issue === "Electrical" ||
    description.includes("spark") ||
    description.includes("shock") ||
    description.includes("fire")
  ) {
    return "Critical";
  }

  if (
    issue === "Water" ||
    description.includes("leak") ||
    description.includes("overflow")
  ) {
    return "High";
  }

  if (
    issue === "Sanitation" ||
    description.includes("dirty") ||
    description.includes("smell")
  ) {
    return "Medium";
  }

  return "Low";
}

// Root test
app.get("/", (req, res) => {
  res.send("Backend is running");
});

// Add complaint
app.post("/complaint", (req, res) => {
  const { name, room, issue, description } = req.body;

  const priority = getPriority(issue, description);

  complaints.push({
    name,
    room,
    issue,
    description,
    priority
  });

  res.json({ message: "Complaint added successfully" });
});

// Get complaints
app.get("/complaints", (req, res) => {
  res.json(complaints);
});

// Start server
app.listen(5000, () => {
  console.log("Backend running on http://localhost:5000");
});
